<div class="container-main">
  <div class="container">
  <div class="bannergallery">
      <div class= "title-gallery">
        <h1><%=@product_categories.name%></h1>
      </div>
  </div>
  <div class="container">
    <h1>Choississez votre produit</h1>
  </div>

  <div class="container-index container-index-img">
    <div class="cards-index">
      <% @all_products.each do |products| %>
      <div class="card-category-index" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path products.photo.key %>)">
        <h4><%=products.name%></h4>
          <div class="button">
            <h4 class="one"><%= link_to "Personnaliser le produit", product_path(products.id)%></h4>
          </div>
      </div>
      <% end %>
    </div>
  </div>
  </div>
</div>
